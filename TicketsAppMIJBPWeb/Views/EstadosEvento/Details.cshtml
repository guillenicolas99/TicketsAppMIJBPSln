@model CapaInfraestructura.CapaDominio.Entities.EstadosEvento

@{
    ViewData["Title"] = "Detalles";
}

<section>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <article class="card shadow">
                <div class="card-header">
                    <h2>Detalles del estado</h2>
                </div>
                <div class="card-body">
                    <p>
                        <strong>Nombre del estado:</strong> @Html.DisplayFor(model => model.NombreEstadoEvento)
                    </p>

                    <p>
                        <strong>Descripción:</strong> @Html.DisplayFor(model => model.DescripcionEstadoEvento)
                    </p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.IdEstadoEvento">Editar</a> |
                    <a class="btn btn-secondary" asp-action="Index">Volver</a>
                </div>
            </article>
        </div>
    </div>
</section>
