@model CapaInfraestructura.CapaDominio.Entities.Evento

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="shadow-lg card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-header">
                <h2>Crear evento</h2>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="NombreEvento" class="control-label"></label>
                    <input asp-for="NombreEvento" class="form-control" />
                    <span asp-validation-for="NombreEvento" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FechaEvento" class="control-label"></label>
                    <input asp-for="FechaEvento" class="form-control" />
                    <span asp-validation-for="FechaEvento" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CantidadTotalTickets" class="control-label"></label>
                    <input asp-for="CantidadTotalTickets" class="form-control" />
                    <span asp-validation-for="CantidadTotalTickets" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DescripcionEvento" class="control-label"></label>
                    <textarea asp-for="DescripcionEvento" class="form-control"></textarea>
                    <span asp-validation-for="DescripcionEvento" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EstadoEventoIdEstadoEvento" class="control-label"></label>
                    <select asp-for="EstadoEventoIdEstadoEvento" class="form-control" asp-items="ViewBag.EstadoEventoIdEstadoEvento"></select>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Crear" class="btn btn-success" />
                    <a class="btn btn-secondary" asp-action="Index">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
