@model IEnumerable<CapaInfraestructura.CapaDominio.Entities.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if(Model.Count() > 0)
{    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadTotalTickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoEventoIdEstadoEventoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadTotalTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoEventoIdEstadoEventoNavigation.DescripcionEstadoEvento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEvento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEvento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEvento">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>
}
else
{
    <h2>No hay Eventos Creados</h2>
}